<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Dashboard_Learn">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="#0099FF">

        <Button
            android:id="@+id/btnLearn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="11dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/circle2"
            android:text="L"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"
            android:text="Bencana"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:textStyle="bold"  />

        <RelativeLayout
            android:layout_width="270dp"
            android:layout_height="58dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:layout_marginTop="118dp"
            android:background="@drawable/search_button">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/search"/>

            <EditText
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

    </RelativeLayout>

    <ImageButton
        android:id="@+id/btnGempa"
        android:layout_width="116dp"
        android:layout_height="140dp"
        android:layout_marginTop="205dp"
        android:layout_marginLeft="7dp"
        android:background="@drawable/kate1"/>

    <ImageButton
        android:id="@+id/btnBanjir"
        android:layout_width="116dp"
        android:layout_height="140dp"
        android:layout_marginTop="205dp"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@id/btnGempa"
        android:background="@drawable/kate2"/>

    <ImageButton
        android:id="@+id/btnTornado"
        android:layout_width="130dp"
        android:layout_height="140dp"
        android:layout_marginTop="205dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/btnBanjir"
        android:background="@drawable/kate3"/>

    <ImageButton
        android:id="@+id/btnTsunami"
        android:layout_width="115dp"
        android:layout_height="140dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="63dp"
        android:layout_below="@id/btnGempa"
        android:background="@drawable/kate4"/>

    <ImageButton
        android:id="@+id/btnKebakaran"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="63dp"
        android:layout_below="@id/btnGempa"
        android:layout_toRightOf="@id/btnTsunami"
        android:background="@drawable/kate5"/>

</RelativeLayout>