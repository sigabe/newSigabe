<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Dashboard_Learn">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="#0099FF">

        <Button
            android:id="@+id/btnLearn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="11dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/circle2"
            android:text="L"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"
            android:text="Bencana"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:textStyle="bold"  />

        <RelativeLayout
            android:layout_width="270dp"
            android:layout_height="55dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:layout_marginTop="118dp"
            android:background="@drawable/search_button">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_search_black_24dp"/>

            <EditText
                android:id="@+id/input"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="15dp"
                android:hint="Cari"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                />

        </RelativeLayout>

    </RelativeLayout>

    <ImageButton
        android:id="@+id/btnGempa2"
        android:layout_width="113dp"
        android:layout_height="140dp"
        android:layout_marginTop="215dp"
        android:layout_marginLeft="7dp"
        android:background="@drawable/kate1"/>

    <ImageButton
        android:id="@+id/btnBanjir2"
        android:layout_width="113dp"
        android:layout_height="140dp"
        android:layout_marginTop="215dp"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@id/btnGempa2"
        android:background="@drawable/kate2"/>

    <ImageButton
        android:id="@+id/btnTornado2"
        android:layout_width="133dp"
        android:layout_height="140dp"
        android:layout_marginTop="215dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/btnBanjir2"
        android:background="@drawable/kate3"/>

    <ImageButton
        android:id="@+id/btnTsunami2"
        android:layout_width="115dp"
        android:layout_height="140dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="63dp"
        android:layout_below="@id/btnGempa2"
        android:background="@drawable/kate4"/>

    <ImageButton
        android:id="@+id/btnKebakaran2"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="63dp"
        android:layout_below="@id/btnGempa2"
        android:layout_toRightOf="@id/btnTsunami2"
        android:background="@drawable/kate5"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C0C0C0"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >

            <ImageButton
                android:id="@+id/btnBeranda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_home_black_24dp"/>

            <ImageButton
                android:id="@+id/btnCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="70dp"
                android:background="@drawable/ic_call_black_24dp"/>

            <ImageButton
                android:id="@+id/btnPesan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="70dp"
                android:background="@drawable/ic_chat_black_24dp"/>

            <ImageButton
                android:id="@+id/btnKeluar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="70dp"
                android:background="@drawable/ic_lock_outline_black_24dp"/>
        </android.support.v7.widget.LinearLayoutCompat>

    </RelativeLayout>

</RelativeLayout>