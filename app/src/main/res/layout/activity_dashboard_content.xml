<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardContent"
    android:background="#36bab3b3">
    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="@drawable/rectangle">
        <TextView
            android:layout_width="175dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:text="Survive Content"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/r1"
        android:background="#FFFFFF">
        <TextView
            android:id="@+id/tx1"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:text="Bencana Alam"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:textSize="19sp"
            android:textColor="#0372fa"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tx2"
            android:layout_toRightOf="@id/tx1"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:text="Bencana Sosial"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:textSize="19sp"
            android:textStyle="bold"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/rl2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp">
                    <LinearLayout
                        android:id="@+id/btnBanjir"
                        android:layout_width="170dp"
                        android:layout_height="160dp"
                        android:layout_marginLeft="10dp">
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginLeft="35dp"
                                android:background="@drawable/ic_banjir"
                                android:layout_marginTop="10dp"/>
                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="35dp"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="120dp"
                                android:text="Banjir"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/btnKebakaran"
                        android:layout_width="170dp"
                        android:layout_height="160dp"
                        android:layout_marginLeft="190dp"
                        android:layout_marginRight="10dp">
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginLeft="35dp"
                                android:background="@drawable/ic_kebakaran"
                                android:layout_marginTop="10dp"/>
                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="35dp"
                                android:layout_marginLeft="35dp"
                                android:layout_marginTop="120dp"
                                android:text="Kebakaran"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="168dp">
                    <LinearLayout
                        android:id="@+id/btnGempa"
                        android:layout_width="170dp"
                        android:layout_height="160dp"
                        android:layout_marginLeft="10dp">
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginLeft="35dp"
                                android:background="@drawable/ic_gempa"
                                android:layout_marginTop="10dp"/>
                            <TextView
                                android:layout_width="117dp"
                                android:layout_height="35dp"
                                android:layout_marginLeft="25dp"
                                android:layout_marginTop="120dp"
                                android:text="Gempa Bumi"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_height="160dp"
                        android:layout_marginLeft="190dp"
                        android:layout_marginRight="10dp">
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginLeft="35dp"
                                android:background="@drawable/ic_tornado"
                                android:layout_marginTop="10dp"/>
                            <TextView
                                android:layout_width="138dp"
                                android:layout_height="35dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="120dp"
                                android:text="Puting Beliung"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>