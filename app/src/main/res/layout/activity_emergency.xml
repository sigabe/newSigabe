<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Emergency">

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/rectangle">
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:text="Emergency Call"
            android:textColor="#FFFFFF"
            android:textSize="29sp"
            android:textStyle="bold"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#0e90caf7">
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:textSize="25dp"
                    android:text="B"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
                <View
                    android:layout_width="50dp"
                    android:layout_height="5dp"
                    android:background="#000000"
                    android:layout_marginTop="35dp"/>
                <ImageButton
                    android:id="@+id/btnSar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/basarnas"/>
                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:text="Basarnas"
                    android:layout_marginTop="120dp"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="20dp"/>
                <ImageButton
                    android:id="@+id/btnPen"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginLeft="50dp"
                    android:layout_toRightOf="@id/btnSar"
                    android:background="@drawable/bansos"/>
                <TextView
                    android:layout_toRightOf="@id/txt1"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:text="Bansos"
                    android:layout_marginTop="120dp"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="40dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="180dp"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#0ea75bbe">
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:textSize="25dp"
                    android:text="B"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
                <View
                    android:layout_width="50dp"
                    android:layout_height="5dp"
                    android:background="#000000"
                    android:layout_marginTop="35dp"/>
                <ImageButton
                    android:id="@+id/btnSar1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/basarnas"/>
                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:text="Basarnas"
                    android:layout_marginTop="120dp"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="20dp"/>
                <ImageButton
                    android:id="@+id/btnPen1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginLeft="50dp"
                    android:layout_toRightOf="@id/btnSar1"
                    android:background="@drawable/bansos"/>
                <TextView
                    android:layout_toRightOf="@id/txt2"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:text="Bansos"
                    android:layout_marginTop="120dp"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="40dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>