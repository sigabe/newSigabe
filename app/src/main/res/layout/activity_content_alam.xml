<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContentAlam">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4b9797f5">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="130dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="299dp"
                android:layout_marginTop="6dp"
                android:orientation="vertical"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="4dp"
                tools:layout_editor_absoluteY="195dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="298dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="297dp"
                        android:paddingBottom="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageButton
                                    android:id="@+id/btnKebanjiran"
                                    android:layout_width="200dp"
                                    android:layout_height="290dp"
                                    android:background="@drawable/banjir"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp">
                                <ImageButton
                                    android:id="@+id/btnGempaBumi"
                                    android:layout_width="200dp"
                                    android:layout_height="290dp"
                                    android:background="@drawable/gempa"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp">
                                <ImageButton
                                    android:id="@+id/btnKebakaran"
                                    android:layout_width="200dp"
                                    android:layout_height="290dp"
                                    android:background="@drawable/kebakaran"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp">
                                <ImageButton
                                    android:id="@+id/btnPBeliung"
                                    android:layout_width="200dp"
                                    android:layout_height="290dp"
                                    android:background="@drawable/angin"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp">
                                <ImageButton
                                    android:layout_width="200dp"
                                    android:layout_height="290dp"
                                    android:background="@drawable/tsuna" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="10dp">
                            </LinearLayout>

                        </LinearLayout>

                    </HorizontalScrollView>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>