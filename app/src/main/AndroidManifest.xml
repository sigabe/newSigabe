        <activity android:name=".ContentKebakaran" />
        <activity android:name=".ContentBakar2" />
        <activity android:name=".ContentBeliung" />
        <activity android:name=".ContentBukanAlam" />
        <activity android:name=".ContentJatuh"></activity>
